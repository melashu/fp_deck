<div class="flex flex-col items-center w-1/2 mx-auto">
<%=image_tag('logo', class: 'w-64 h-64')%>
<h1 class="text-3xl text-sky-700 font-semibold mb-6">User Login</h1>

      <% flash.each do |key, value| %>
       <div class="border border-orange-600 p-3 rounded w-max mx-auto"><%= value %></div>
    <% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-6">
    <%= f.email_field :email, autofocus: true, class: 'filter-input-field', placeholder: 'Email', autocomplete: "email" %>
  </div>

  <div class="mb-6">
    <%= f.password_field :password, class: 'filter-input-field ', placeholder: 'Password', autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit "Log in", class: 'btn-primary rounded-lg cursor-pointer hover:bg-opacity-90' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>